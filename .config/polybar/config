[module/temperature]
type = internal/temperature
thermal-zone = 2
warn-temperature = 60
interval = 0.5

format = <ramp> <label>
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_input

label = %temperature-c%
label-foreground = ${colors.foreground}

ramp-0 = temp
ramp-1 = temp
ramp-2 = temp
ramp-3 = temp
ramp-4 = temp
ramp-foreground = ${colors.foreground-alt}

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.foreground}
label-close =  cancelar
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reiniciar
menu-0-0-exec = menu-open-1
menu-0-1 = desligar
menu-0-1-exec = menu-open-2

menu-1-0 = cancelar
menu-1-0-exec = menu-open-0
menu-1-1 = reiniciar
menu-1-1-exec = shutdown -r now

menu-2-0 = desligar
menu-2-0-exec = shutdown -h now
menu-2-1 = cancelar
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

