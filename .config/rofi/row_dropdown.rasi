	font:							"JetBrainsMono Nerd Font 8";
    show-icons:                     false;
	icon-theme: 					"gruvbox-dark-icons-gtk";
    display-drun: 					"ï€‚";
    drun-display-format:            "{name}";
    disable-history:                true;
	sidebar-mode: 					false;
    /* height:                         15; */
}

