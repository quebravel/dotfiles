/**
 * ROFI Color theme
 * User: Rokit
*/

configuration {
    display-drun:    "ATIVAR";
    display-run:     "RUN";
    display-window:  "";
    display-combi:   "";
}

* {
  base-bg: #222;
  selected-bg: #00afaf;
  base-color: #000000aa;
  selected-color: #222;
  /* border-color: #00000066; */
  /* transparent: #00000000; */
  text-color: @base-color;
  font: "tamzenforpowerline bold 12";
  /* font: "monospace 10"; */
}
#window {
  anchor: north;
  location: north;
  width: 100%;
  background-color: @base-bg;
  margin: 0px 0px 0% 0px;
  children: [ horibox ];
}
#horibox {
  background-color: #0087ff;
  orientation: horizontal;
  children: [ prompt, textbox-prompt-colon, entry, listview ];
}
#prompt {
  /* text-color: @selected-color; */
  text-color: #000;
  padding: 0.7em 0px 0.7em 10px;
  background-color: #0087ff; /*mudei*/
}
#textbox-prompt-colon  {
  expand: false;
  str: ":";
  padding: 0.7em 10px 0.7em 0px;
  text-color: @selected-color;
  background-color: #0087ff; /*mudei*/
}
#entry {
  padding: 0.7em;
  /* text-color: #0a81f5; */
  text-color: #fff;
  background-color: #0087ff;
  expand: false;
  width: 10em;
}
#listview {
  background-color: #0087ff; /*mudei*/
  layout: horizontal;
  spacing: 0px;
  lines: 100;
}
#element {
  background-color: #0087ff; /*mudei*/
  padding: 0.7em;
}
#element selected {
  border: 0px 0px; /*leve salto quando selecionado*/
  text-color: @selected-color;
  background-color: @selected-bg;
}
